export PATH=$PATH:$HOME/dev/bin
# rbenv
export PATH="$PATH:$HOME/.rbenv/shims"
export PATH="$PATH:$HOME/.rbenv/bin"
# nodenv
export PATH="$PATH:$HOME/.nodenv/bin"
export PATH="/usr/local/sbin:$PATH"

eval "$(rbenv init -)"
eval "$(nodenv init -)"
eval "$(pyenv init -)"
eval "$(hub alias -s)"
eval "$(direnv hook zsh)"

# nodebrew
export PATH=$PATH:$HOME/.nodebrew/current/bin
# To use Homebrews directories rather than $HOME/.nodebrew
export NODEBREW_ROOT=/usr/local/var/nodebrew

export LANG=ja_JP.UTF-8

export EDITOR=/usr/bin/vim

test -e "${HOME}/.iterm2_shell_integration.bash" && source "${HOME}/.iterm2_shell_integration.bash"

# mysql-client
export PATH="$PATH:/usr/local/opt/mysql-client/bin"
export PKG_CONFIG_PATH="$PKG_CONFIG_PATH:/usr/local/opt/mysql-client/lib/pkgconfig"

# gettext
export PATH="$PATH:/usr/local/opt/gettext/bin"

# link openssl
export PATH="$PATH:/usr/local/opt/openssl@1.1/bin"
# Add Visual Studio Code (code)
export PATH="$PATH:/Applications/Visual Studio Code.app/Contents/Resources/app/bin"

export PICO_SDK_PATH="$HOME/dev/src/github.com/raspberrypi/pico-sdk"
export PICO_EXTRAS_PATH="$HOME/dev/src/github.com/raspberrypi/pico-extras"
export PATH="$PATH:/usr/local/opt/arm-none-eabi-binutils/bin"
export PATH="/Applications/ArmGNUToolchain/14.2.rel1/arm-none-eabi/bin:$PATH"
